<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Plants</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Adminsite/vendors/iconfonts/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/Adminsite/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Adminsite/vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Adminsite/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Adminsite/images/favicon.png" />
</head>

<body>
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel" style="width:100%">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title">
                        List Product
                    </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size: 15px;"><a href="@Url.Action("Productcreate","Product")" style="color:black;">Product List</a></li>
                        </ol>
                        <form>
                            <div class="row">
                                <div class="">
                                    <input name="term" class="form-control" placeholder="search bar" />
                                </div>
                                <div class="">
                                    <button type="submit" class="btn btn-primary mt-1 ml-2">search</button>
                                </div>
                            </div>
                        </form>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="table-sorter-wrapper col-lg-12 table-responsive">
                                        <table id="sortable-table-1" class="table">
                                            <thead>
                                                <tr>
                                                    <th class="sortStyle">Name</th>
                                                    <th class="sortStyle">Category</th>
                                                    <th class="sortStyle">description</th>
                                                    <th class="sortStyle">price</th>
                                                    <th class="sortStyle">image</th>
                                                    <th class="sortStyle">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.productName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Category.categoryName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.description)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.price)
                                                        </td>
                                                        <td>
                                                          <img src="~/@item.productimage" width="300px;" height="200px"/>
                                                        </td>
                                                        <td>
                                                            <a asp-action="ProductEdit" asp-route-id="@item.productId" class="btn btn-primary">Edit</a>
                                                        </td>
                                                          
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- main-panel ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <!-- End custom js for this page-->
</body>


